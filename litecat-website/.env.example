# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# CoinPayments API
COINPAYMENTS_PUBLIC_KEY=your_coinpayments_public_key
COINPAYMENTS_PRIVATE_KEY=your_coinpayments_private_key
COINPAYMENTS_MERCHANT_ID=your_merchant_id
COINPAYMENTS_IPN_SECRET=your_ipn_secret

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Email Configuration (for confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# RGB Protocol Configuration
RGB_NODE_URL=your_rgb_node_url
RGB_WALLET_PATH=./wallets/rgb_wallet.json
RGB_ASSET_ID=your_litecat_asset_id

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10
BCRYPT_SALT_ROUNDS=12

# Admin Configuration
ADMIN_EMAIL=admin@litecat.xyz
ADMIN_PASSWORD_HASH=your_hashed_admin_password

# Game Configuration
GAME_TIER_1_MAX_SCORE=9
GAME_TIER_2_MAX_SCORE=19
GAME_TIER_3_MIN_SCORE=20

# Token Configuration
TOTAL_SUPPLY=21000000
TOKENS_PER_BATCH=700
SATOSHIS_PER_BATCH=2000
TOTAL_BATCHES=30000
DEV_RESERVE_BATCHES=1500
AVAILABLE_BATCHES=28500

# Webhook URLs
PAYMENT_SUCCESS_WEBHOOK=https://yourdomain.com/api/webhooks/payment-success
PAYMENT_FAILED_WEBHOOK=https://yourdomain.com/api/webhooks/payment-failed

# Client URLs
CLIENT_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001
